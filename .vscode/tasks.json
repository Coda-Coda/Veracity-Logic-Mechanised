{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-script",
      "type": "shell",
      "command": "nix-shell --run \"cd ./Coq/latex; ./generate-coq-snippets.sh; latexmk -pdf -synctex=1 -shell-escape main.tex\"",
      "problemMatcher": [],
      "dependsOrder": "sequence"
    },
    {
      "label": "update-pdf", 
      "dependsOn": "build-script", 
      "dependsOrder": "sequence",
      "command": "${command:latex-workshop.refresh-viewer}",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}